---
import PageLogo from "./PageLogo.astro";
import MenuButton from "../react/components/MenuButton";
import ThemeToggle from "../react/components/ThemeToggle";
import { THEME_COLORS } from "../constants/classes";
---

<header class="sticky top-0 z-20">
  <div
    class:list={[
      "flex flex-row items-center p-2 border-2 rounded-lg shadow",
      THEME_COLORS.background.bg0,
      THEME_COLORS.border.bg3,
    ]}
  >
    <div class="flex-1/3 flex gap-1">
      <MenuButton client:only="react" />
    </div>

    <div class="flex-1/3 flex justify-center">
      <PageLogo classes="text-2xs" />
    </div>

    <div class="flex-1/3 flex gap-2 justify-end items-center pr-2">
      <ThemeToggle client:only="react" />
    </div>
  </div>
</header>
