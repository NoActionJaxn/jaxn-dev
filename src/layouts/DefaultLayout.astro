---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import classNames from "classnames";
import { COLORS, SPACING } from "../constants/classes";
import Menu from "../react/components/Menu";

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ?? "JAXN.DEV"}</title>
  </head>
  <body>
    <main class="flex flex-col min-h-screen max-w-8xl m-auto">
      <Header />
      <div
        class={classNames(
          "flex-1",
          SPACING.PAGE.PADDING.X,
          SPACING.PAGE.PADDING.Y
        )}
      >
        <slot />
      </div>
      <Footer />
    </main>
    <Menu client:only="react" />
    <script
      src="https://kit.fontawesome.com/1aad4926f4.js"
      crossorigin="anonymous"></script>
  </body>
</html>
